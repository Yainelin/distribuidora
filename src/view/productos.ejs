<%include includes/_header%> 


<div class="container">
    <h1>Lista de productos</h1>
    <a href="/agregar_producto" class="btn btn-primary">Agregar Producto</a><br><br>

    <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Codigo</th>
            <th scope="col">Nombre del producto</th>
            <th scope="col">Cantidad</th>
            <th scope="col">Precio</th>
            <th scope="col">
              Eliminar
            </th>
          </tr>
        </thead>
        <tbody>
          <%  for(let i = 0; i < productos.length; i++){ %>
              <tr>
                <th scope="row"><%= productos[i].codigo %></th>
                <td><a href="/producto/<%=  productos[i]._id %>"><%= productos[i].nombre %></a></td>
                <td><%= productos[i].cantidad %></td>
                <td><%= productos[i].precio %></td>
                <td><a href="/producto/eliminar/<%=  productos[i]._id %>" class="btn btn-danger" >Eliminar</a></td>
              </tr>
           <% } %>
        </tbody>
      </table>
</div>

<%include includes/_footer%>