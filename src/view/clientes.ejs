<%include includes/_header%> 


<div class="container">
  <h1>Lista de productos</h1>
  <a href="/agregar_producto" class="btn btn-primary">Agregar Producto</a><br><br>

  <table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
            <th scope="col">Cedula</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Telefono</th>

          <th scope="col">
            Eliminar
          </th>
        </tr>
      </thead>
      <tbody>
        <%  for(let i = 0; i < clientes.length; i++){ %>
            <tr>
              <th scope="row"><%= clientes[i].codigo %></th>
              <td><%= clientes[i].cedula %></td>
              <td><a href="/cliente/<%=  cliente[i]._id %>"><%= clientes[i].nombre %></a></td>
              <td><%= clientes[i].apellido%></td>
              <td><%= clientes[i].telefono%></td>
              <td><a href="/cliente/eliminar/<%=  cliente[i]._id %>" class="btn btn-danger" >Eliminar</a></td>
            </tr>
         <% } %>
      </tbody>
    </table>
</div>




<%include includes/_footer%>