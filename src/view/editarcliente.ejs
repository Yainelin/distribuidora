<%include includes/_header %>

<div class="d-flex justify-content-center">
    <div class="col-md-5">
        <form method="POST" action="/cliente/<%= cliente._id %>" class="card mb-5">
            <div class="card-header bg-primary text-white">
                <h3>Actualizar cliente</h3>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label>Nombre y Apellidos</label>
                    <input type="text" name="nombreyapellido" value="<%= cliente.nombreyapellido %>" name="nombre" class="form-control">
                </div>
                <div class="form-group">
                    <label>Cédula/Rif</label>
                    <input type="text" name="cedula"  value="<%= cliente.cedula %>" class="form-control">
                </div>

                <div class="form-group">
                    <label>Télefono</label>
                    <input type="text" value="<%= cliente.telefono %>" name="telefono" class="form-control">
                </div>

                <div class="form-group">
                    <label>Correo</label>
                    <input type="email" value="<%= cliente.correo %>" name="correo" class="form-control">
                </div>
                
                <div class="form-group">
                    <label>Dirección</label>
                    <textarea name="direccion"  class="form-control" rows="10"><%= cliente.direccion %></textarea>
                </div>

                <button class="btn btn-primary btn-block">
                    Actualizar
                </button>
            </div>
        </form>
    </div>
</div>

<%include includes/_footer %>